{"ast":null,"code":"import React, { useEffect, useState } from \"react\";\nimport classNames from \"classnames\";\nimport S from \"./style/scroll.module.scss\"; // icons\n\nimport ArrowIco from \"../../assets/icons/scroll-arrow.svg\";\nimport { jsx as _jsx } from \"react/jsx-runtime\";\nimport { jsxs as _jsxs } from \"react/jsx-runtime\";\nconst scrollPosition = {\n  TOP: \"top\",\n  MIDDLE: \"middle\",\n  BOTTOM: \"bottom\"\n};\n\nconst ScrollControls = props => {\n  const {\n    activeSlide,\n    slidesCount,\n    onPrev,\n    onNext,\n    scrollToSlide,\n    titles\n  } = props;\n  const {\n    0: position,\n    1: setPosition\n  } = useState(scrollPosition.TOP);\n  const isFullsreen = global.window && window.document.fullscreen;\n  useEffect(() => {\n    if (isFullsreen === false) {\n      scrollToSlide(activeSlide);\n    }\n\n    if (activeSlide === 0) setPosition(scrollPosition.TOP);else if (activeSlide > 0 && activeSlide < slidesCount - 1) setPosition(scrollPosition.MIDDLE);else setPosition(scrollPosition.BOTTOM);\n  }, [activeSlide, isFullsreen]);\n\n  const getClassName = () => {\n    switch (position) {\n      case scrollPosition.TOP:\n        return S[\"ScrollControls--top\"];\n\n      case scrollPosition.BOTTOM:\n        return S[\"ScrollControls--bottom\"];\n\n      default:\n        return null;\n    }\n  };\n\n  return /*#__PURE__*/_jsx(\"div\", {\n    className: classNames(S.ScrollControls, getClassName()),\n    children: /*#__PURE__*/_jsxs(\"div\", {\n      className: S.ScrollControls__wrp,\n      children: [/*#__PURE__*/_jsx(\"div\", {\n        className: S.ScrollControls__top,\n        onClick: onPrev,\n        children: /*#__PURE__*/_jsx(ArrowIco, {})\n      }), titles.map((el, i) => {\n        return /*#__PURE__*/_jsxs(\"div\", {\n          className: S.dotParent,\n          children: [/*#__PURE__*/_jsx(\"div\", {\n            onClick: () => scrollToSlide(i),\n            className: classNames(S.controlsDot, i === activeSlide && S.activeDot)\n          }), el && /*#__PURE__*/_jsx(\"p\", {\n            children: el\n          })]\n        }, i);\n      }), /*#__PURE__*/_jsx(\"div\", {\n        className: S.ScrollControls__bottom,\n        onClick: onNext,\n        children: /*#__PURE__*/_jsx(ArrowIco, {})\n      })]\n    })\n  });\n};\n\nexport default ScrollControls;","map":null,"metadata":{},"sourceType":"module"}