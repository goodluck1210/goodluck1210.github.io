{"ast":null,"code":"import easeInOutCubic from './ease-in-out-cubic';\nexport default function animatedScrollTo(scrollTo, duration, callback) {\n  var scrollFrom = window.scrollY || window.pageYOffset || 0;\n  var scrollDiff = scrollTo - scrollFrom;\n  var currentTime = 0;\n  var increment = 20;\n  var url = document.location.pathname;\n\n  (function animateScroll() {\n    currentTime += increment;\n    var newScrollPos = easeInOutCubic(currentTime, scrollFrom, scrollDiff, duration);\n\n    if (currentTime > duration || url !== document.location.pathname) {\n      callback();\n      return;\n    }\n\n    window.scrollTo(0, newScrollPos);\n    setTimeout(animateScroll, increment);\n  })();\n}","map":{"version":3,"sources":["E:/corporate-website/components/Scroll/utils/animated-scroll-to.js"],"names":["easeInOutCubic","animatedScrollTo","scrollTo","duration","callback","scrollFrom","window","scrollY","pageYOffset","scrollDiff","currentTime","increment","url","document","location","pathname","animateScroll","newScrollPos","setTimeout"],"mappings":"AAAA,OAAOA,cAAP,MAA2B,qBAA3B;AAEA,eAAe,SAASC,gBAAT,CAA0BC,QAA1B,EAAoCC,QAApC,EAA8CC,QAA9C,EAAwD;AACrE,MAAIC,UAAU,GAAGC,MAAM,CAACC,OAAP,IAAkBD,MAAM,CAACE,WAAzB,IAAwC,CAAzD;AAEA,MAAMC,UAAU,GAAGP,QAAQ,GAAGG,UAA9B;AAEA,MAAIK,WAAW,GAAG,CAAlB;AACA,MAAMC,SAAS,GAAG,EAAlB;AACA,MAAMC,GAAG,GAAGC,QAAQ,CAACC,QAAT,CAAkBC,QAA9B;;AAEA,GAAC,SAASC,aAAT,GAAyB;AACxBN,IAAAA,WAAW,IAAIC,SAAf;AACA,QAAMM,YAAY,GAAGjB,cAAc,CACjCU,WADiC,EAEjCL,UAFiC,EAGjCI,UAHiC,EAIjCN,QAJiC,CAAnC;;AAMA,QAAIO,WAAW,GAAGP,QAAd,IAA0BS,GAAG,KAAKC,QAAQ,CAACC,QAAT,CAAkBC,QAAxD,EAAkE;AAChEX,MAAAA,QAAQ;AACR;AACD;;AACDE,IAAAA,MAAM,CAACJ,QAAP,CAAgB,CAAhB,EAAmBe,YAAnB;AAEAC,IAAAA,UAAU,CAACF,aAAD,EAAgBL,SAAhB,CAAV;AACD,GAfD;AAgBD","sourcesContent":["import easeInOutCubic from './ease-in-out-cubic';\r\n\r\nexport default function animatedScrollTo(scrollTo, duration, callback) {\r\n  let scrollFrom = window.scrollY || window.pageYOffset || 0;\r\n\r\n  const scrollDiff = scrollTo - scrollFrom;\r\n\r\n  let currentTime = 0;\r\n  const increment = 20;\r\n  const url = document.location.pathname;\r\n\r\n  (function animateScroll() {\r\n    currentTime += increment;\r\n    const newScrollPos = easeInOutCubic(\r\n      currentTime,\r\n      scrollFrom,\r\n      scrollDiff,\r\n      duration\r\n    );\r\n    if (currentTime > duration || url !== document.location.pathname) {\r\n      callback();\r\n      return;\r\n    }\r\n    window.scrollTo(0, newScrollPos);\r\n\r\n    setTimeout(animateScroll, increment);\r\n  })();\r\n}\r\n"]},"metadata":{},"sourceType":"module"}